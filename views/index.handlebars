<h1>Burgers</h1>

<ul>
  {{#each food}}
  {{#unless this.devoured}}
      <li>
        {{this.burger_name}}
        {{this.id}}
        <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Ready to Eat</button>
        </form>

        {{> cats/delete-cat}}
      </li>
      {{/unless}}
  {{/each}}
</ul>

<h2> Burgers you have devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.name}}
        {{this.id}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="cats/create" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="burger_name" name="name">
  </div>


  <button type="submit">Add Cat</button>
</form>